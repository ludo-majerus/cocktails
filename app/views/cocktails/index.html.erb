<div class="row">
  <div class="col-sm-12">
    <p id="notice"><%= notice %></p>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <h1>Un 'ti cocktail ?</h1>
  </div>
</div>

<% @cocktails.each_slice(2) do |cocktails_row| %>

  <div class="row">
  
  <% cocktails_row.each do |cocktail| %>


    <div class="col-sm-12 col-md-6">
      <img src="/assets/<%= cocktail.picture %>" alt="<%= cocktail.name %>" /><br />
      <div class="cocktail_name"><%= cocktail.name %></div><br />
      <div class="cocktail_description"><%= cocktail.description %></div><br />
      <%= render 'orders/form', order: @order, cocktail_id: cocktail.id %>
      <% if @is_root %>
        <br /><br />
        <%= link_to 'Show', cocktail %>
        <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
        <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </div>
  <% end %>
  </div>
<% end %>
</div>


<div class="row">
  <div class="col-sm-12">
    <% if @is_root %>
    <%= link_to 'New Cocktail', new_cocktail_path %>
    <% end %>
  </div>
</div>