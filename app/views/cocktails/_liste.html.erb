<% liste.each_slice(2) do |cocktails_row| %>

  <div class="row">
  
  <% cocktails_row.each do |cocktail| %>


    <div class="col-sm-12 col-md-6">
      <img src="/assets/<%= cocktail.picture %>" alt="<%= cocktail.name %>" class="img-responsive center-block"  />
      <div class="cocktail_name text-center"><h3><%= cocktail.name %></h3></div>
      <div class="cocktail_description text-center"><h4><%= cocktail.description %></h4></div>
      <%= render 'orders/form', order: @order, cocktail_id: cocktail.id %>
      <% if @is_root %>
        <%= link_to 'Show', cocktail %>
        <%= link_to 'Edit', edit_cocktail_path(cocktail) %>
        <%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
      <br /><br />
    </div>
  <% end %>
  </div>
<% end %>
<br /><br />